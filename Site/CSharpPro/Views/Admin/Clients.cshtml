@model List<CSharpPro.DataModels.Client>
@{
    Layout = "_LayoutAdmin.cshtml";
}
<div class="list client-list">
    <h1 class="section-title">
        Clients
        @Html.ActionLink(" ", "Client", "Admin", null, new { @class = "fa fa-plus add-new" })
    </h1>
    <table class="table table-striped table-hover">
        <thead class="thead-inverse">
            <tr>
                <th>Name</th>
                <th class="actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr id="client-@client.Id">
                    <td>@client.Name</td>
                    <td class="actions">
                        @Html.ActionLink(" ", "Client", "Admin", new { id = client.Id }, new { @class = "fa fa-pencil-square-o edit text-success" })
                        @Ajax.ActionLink(" ", "Client", "Admin", new { id = client.Id }, new AjaxOptions { HttpMethod = "DELETE", InsertionMode = InsertionMode.Replace, UpdateTargetId = "client-" + client.Id, Confirm="Are you sure want to delete this client?" }, new { @class = "fa fa-times text-danger" })
                        @if(!string.IsNullOrEmpty(client.Link)){
                            <a href="http://@client.Link" class="fa fa-link" target="_blank"></a>
                        }
                    </td>
                </tr>
           }
        </tbody>
    </table>
</div>