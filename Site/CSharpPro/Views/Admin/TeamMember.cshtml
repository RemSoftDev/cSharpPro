@model CSharpPro.ViewModels.TeamMemberViewModel
@{
    Layout = "_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("TeamMember", "Admin", FormMethod.Post, new { @class = "team-member-form", enctype="multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label for="@Html.IdFor(x=>x.Image)" class="bold">Member Photo:</label>
                @if(Model != null && !string.IsNullOrEmpty(Model.ImageUrl)){
                    <div class="thumbnail">
                        @Html.HiddenFor(x=>x.ImageUrl)
                        <img src="@Model.ImageUrl" alt="project image"/>
                    </div>
                }
                <br/>
                @Html.TextBoxFor(x=>x.Image, new { type="file", @class="form-control" })
            </div>
        </div>
        <div class="col-sm-8">
            <div class="form-group">
                <label for="@Html.IdFor(x=>x.Name)" class="bold">Name:</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "full name" })
            </div>
            <div class="form-group">
                <label for="@Html.IdFor(x=>x.Position)" class="bold">Position:</label>
                @Html.TextBoxFor(x => x.Position, new { @class = "form-control", placeholder = "position" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <hr />
            @Html.ActionLink("Cancel", "TeamMembers", "Admin", null, new { @class = "btn btn-default pull-left" })
            <button class="btn btn-success pull-right" type="submit">Save</button>
        </div>
    </div>
}
