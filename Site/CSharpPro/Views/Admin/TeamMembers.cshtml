@model List<CSharpPro.DataModels.TeamMember>
@{
    Layout = "_LayoutAdmin.cshtml";
}
<div class="list team-member-list">
    <h1 class="section-title">
        Team Members
        @Html.ActionLink(" ", "TeamMember", "Admin", null, new { @class = "fa fa-plus add-new" })
    </h1>
    <table class="table table-striped table-hover">
        <thead class="thead-inverse">
            <tr>
                <th>Name</th>
                <th class="actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var TeamMember in Model)
            {
                <tr id="TeamMember-@TeamMember.Id">
                    <td>@TeamMember.Name</td>
                    <td class="actions">
                        @Html.ActionLink(" ", "TeamMember", "Admin", new { id = TeamMember.Id }, new { @class = "fa fa-pencil-square-o edit text-success" })
                        @Ajax.ActionLink(" ", "TeamMember", "Admin", new { id = TeamMember.Id }, new AjaxOptions { HttpMethod = "DELETE", InsertionMode = InsertionMode.Replace, UpdateTargetId = "TeamMember-" + TeamMember.Id, Confirm="Are you sure want to delete this TeamMember?" }, new { @class = "fa fa-times text-danger" })
                    </td>
                </tr>
           }
        </tbody>
    </table>
</div>