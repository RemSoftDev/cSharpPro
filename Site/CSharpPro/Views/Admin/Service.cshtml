@model CSharpPro.ViewModels.ServiceViewModel
@{
    Layout = "_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Service", "Admin", FormMethod.Post, new { @class = "service-form", enctype="multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label for="@Html.IdFor(x=>x.Image)" class="bold">Member Photo:</label>
                @if(Model != null && !string.IsNullOrEmpty(Model.ImageUrl)){
                    <div class="thumbnail">
                        @Html.HiddenFor(x=>x.ImageUrl)
                        <img src="@Model.ImageUrl" alt="project image"/>
                    </div>
                }
                <br/>
                @Html.TextBoxFor(x=>x.Image, new { type="file", @class="form-control" })
            </div>
        </div>
        <div class="col-sm-8">
            <div class="form-group">
                <label for="@Html.IdFor(x=>x.Title)" class="bold">Title:</label>
                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "title" })
            </div>
            <div class="form-group">
                <label for="@Html.IdFor(x=>x.ShortDescription)" class="bold">Short Description:</label>
                @Html.TextAreaFor(x => x.ShortDescription, new { @class = "form-control", rows = "7" })
            </div>
        </div>
    </div>

    <div class="row">
            <div class="form-group">
                <label for="@Html.IdFor(x=>x.Description)" class="bold">Description:</label>
                @Html.TextAreaFor(x => x.Description, new { @class = "tinymce", rows = "15" })
            </div>
        <div class="col-sm-12">
            <hr />
            @Html.ActionLink("Cancel", "Services", "Admin", null, new { @class = "btn btn-default pull-left" })
            <button class="btn btn-success pull-right" type="submit">Save</button>
        </div>
    </div>
}
