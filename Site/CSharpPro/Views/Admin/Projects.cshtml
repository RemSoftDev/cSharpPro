@model List<CSharpPro.DataModels.Project>
@{
    Layout = "_LayoutAdmin.cshtml";
}
<div class="list project-list">
    <h1 class="section-title">
        Projetcs
        @Html.ActionLink(" ", "Project", "Admin", null, new { @class = "fa fa-plus add-new" })
    </h1>
    <table class="table table-striped table-hover">
        <thead class="thead-inverse">
            <tr>
                <th>Project Title</th>
                <th class="actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr id="project-@project.Id">
                    <td>@project.Title</td>
                    <td class="actions">
                        @Html.ActionLink(" ", "Project", "Admin", new { id = project.Id }, new { @class = "fa fa-pencil-square-o edit text-success" })
                        @Ajax.ActionLink(" ", "Project", "Admin", new { id = project.Id }, new AjaxOptions { HttpMethod = "DELETE", InsertionMode = InsertionMode.Replace, UpdateTargetId = "project-" + project.Id, Confirm = "Are you sure want to delete this client?" }, new { @class = "fa fa-times text-danger" })
                        @if(!string.IsNullOrEmpty(project.Link)){
                            <a href="http://@project.Link" class="fa fa-link" target="_blank"></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>