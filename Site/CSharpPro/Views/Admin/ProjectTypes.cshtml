@model List<CSharpPro.DataModels.ProjectType>
@{
    Layout = "_LayoutAdmin.cshtml";
}
<div class="list client-list">
    <h1 class="section-title">
        Types
        @Html.ActionLink(" ", "ProjectType", "Admin", null, new { @class = "fa fa-plus add-new" })
    </h1>
    <table class="table table-striped table-hover">
        <thead class="thead-inverse">
            <tr>
                <th>Title</th>
                <th class="actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var type in Model)
            {
                <tr id="project-type-@type.Id">
                    <td>@type.Title</td>
                    <td class="actions">
                        @Html.ActionLink(" ", "ProjectType", "Admin", new { id = type.Id }, new { @class = "fa fa-pencil-square-o edit text-success" })
                        @Ajax.ActionLink(" ", "ProjectType", "Admin", new { id = type.Id }, new AjaxOptions { HttpMethod = "DELETE", InsertionMode = InsertionMode.Replace, UpdateTargetId = "project-type-" + type.Id, Confirm = "Are you sure want to delete this project type?" }, new { @class = "fa fa-times text-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>