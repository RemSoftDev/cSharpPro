@model CSharpPro.ViewModels.ClientViewModel
@{
    Layout = "_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Client", "Admin", FormMethod.Post, new { @class = "client-form", enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label for="@Html.IdFor(x=>x.Image)" class="bold">Client Image:</label>
                @if (Model != null && !string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="thumbnail">
                        @Html.HiddenFor(x => x.ImageUrl)
                        <img src="@Model.ImageUrl" alt="project image" />
                    </div>
}
                <br />
                @Html.TextBoxFor(x => x.Image, new { type = "file", @class = "form-control" })
            </div>
        </div>
        <div class="col-sm-8">
            <div class="form-group">
                <label for="@Html.IdFor(x=>x.Name)" class="bold">Client Name:</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "full name" })
            </div>
            <div class="form-group">
                <label for="@Html.IdFor(x=>x.Link)" class="bold">Client link:</label>
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon3">http://</span>
                    @Html.TextBoxFor(x => x.Link, new { @class = "form-control", placeholder = "client url" })
                </div>
            </div>
            <div class="form-group">
                <label for="@Html.IdFor(x=>x.Testimonial)" class="bold">Testimonial:</label>
                @Html.TextAreaFor(x => x.Testimonial, new { @class = "form-control", rows = "7" })
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <hr />
            @Html.ActionLink("Cancel", "Clients", "Admin", null, new { @class = "btn btn-default pull-left" })
            <div class="pull-right">
                <span class="checkbox d-inline-block">
                    <label>@Html.CheckBoxFor(x => x.HappyClient) Show as Happy Client</label>
                </span>
                <button class="btn btn-success" type="submit">Save</button>
            </div>
        </div>
    </div>
}
