@model CSharpPro.ViewModels.AboutUsViewModel

@{
    ViewBag.Title = "About cSharp Company";
}
<section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-12">
                        <h1 class="title">About Us</h1>
                        <p>Why our Clients love to work with us.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#page-breadcrumb-->
<section id="company-information" class="padding wow fadeIn" data-wow-duration="1000ms" data-wow-delay="300ms">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <img src="~/Content/images/Community-people-with-gears-01.png" class="img-responsive" alt="we are">
            </div>
            <div class="col-sm-6">
                <p>Hello and thank you for visiting our website. It’s already 21st century today and we can’t imagine our everyday life without Internet. And it gives a lot of different possibilities for everybody.</p>
                <p>&nbsp;</p>
                <p>We are here to help you in creating something majestic that will lead your business to the TOP. And these majestic things are websites, mobile and desktop applications that are going to widely expand the possibilities your business and help you to bring your idea to broader number of potential clients. Besides, if you have already existing ones, we’ll be glad to implement the necessary changes in your projects so they can run better and better.
So, don’t hesitate – catch the moment. And tell us what you need. Our highly professional developers will look through your project and give you the proper feedback about the next steps to bring your idea to live.</p>
            </div>
        </div>
    </div>
</section>
@if(Model.TeamMembers != null && Model.TeamMembers.Any())
{
var teamMembersGroup = Model.TeamMembers.Select((x, i) => new {Group = i/4, Value = x})
                .GroupBy(item => item.Group, g => g.Value)
                .ToList();
<section id="team">
    <div class="container">
        <div class="row">
            <h1 class="title text-center wow fadeInDown" data-wow-duration="500ms" data-wow-delay="300ms">Meet the Team</h1>
            @*<p class="text-center wow fadeInDown" data-wow-duration="400ms" data-wow-delay="400ms">
                Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. <br>
                Ut enim ad minim veniam, quis nostrud
            </p>*@
            <div id="team-carousel" class="carousel slide wow fadeIn" data-ride="carousel" data-wow-duration="400ms" data-wow-delay="400ms">
                <!-- Indicators -->
                <ol class="carousel-indicators visible-xs">
                    <li data-target="#team-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#team-carousel" data-slide-to="1"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @foreach(var group in teamMembersGroup){
                        <div class="item @(teamMembersGroup.IndexOf(group) == 0 ? "active":"")">
                        @foreach(var member in group)
                        {
                            <div class="col-sm-3 col-xs-6">
                                <div class="team-single-wrapper">
                                    <div class="team-single">
                                        <div class="person-thumb">
                                            <img src="@member.ImageUrl" class="img-responsive" alt="">
                                        </div>
                                        <!--<div class="social-profile">
                                            <ul class="nav nav-pills">
                                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                            </ul>
                                        </div>-->
                                    </div>
                                    <div class="person-info">
                                        <h2>@member.Name</h2>
                                        <p>@member.Position</p>
                                    </div>
                                </div>
                            </div>
                        }
                        </div>
                    }
                </div>
                <!-- Controls -->
                <a class="left team-carousel-control hidden-xs" href="#team-carousel" data-slide="prev">left</a>
                <a class="right team-carousel-control hidden-xs" href="#team-carousel" data-slide="next">right</a>
            </div>
        </div>
    </div>
</section>
}
<!--/#team-->
