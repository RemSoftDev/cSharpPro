@model CSharpPro.DataModels.Service
@{
    ViewBag.Title = Model.Title;
}
<section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-12">
                        <h1 class="title">@Model.Title</h1>
                        <p>@Model.ShortDescription</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#page-breadcrumb-->
<section id="about-company" class="padding">
    <div class="container">
        <div class="row">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="col-sm-6 thumbnail-colorfull-wrapper">
                    <img src="@Model.ImageUrl" alt="@Model.Title" />
                </div>}

            <div class="@(!string.IsNullOrEmpty(Model.ImageUrl)? "col-sm-6 ": "col-sm-12")">
                @Html.Raw(Model.Description)
            </div>
        </div>
    </div>
</section>

<!--/#service-cdescription-->