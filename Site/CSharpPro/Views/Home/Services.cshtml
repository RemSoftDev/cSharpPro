@model List<CSharpPro.DataModels.Service>
@{
    ViewBag.Title = "Services";
}
<section id="page-breadcrumb">
    <div class="vertical-center sun">
        <div class="container">
            <div class="row">
                <div class="action">
                    <div class="col-sm-12">
                        <h1 class="title">Services</h1>
                        <p>Designed to suit you.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/#page-breadcrumb-->

<section id="company-information" class="choose">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="0ms">
                <img src="~/Content/images/team-of-software-developers.png" class="img-responsive" alt="">
            </div>
            <div class="col-sm-6 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="0ms">
                <h2>Why choose us?</h2>
                <p>Our company is highly competent in our area and we always meet our clients expectations.</p>
                <h3>We provide whide range of services:</h3>
                <ul class="elements">
                    <li class="wow fadeInUp" data-wow-duration="900ms" data-wow-delay="100ms"><i class="fa fa-angle-right"></i> Web Development</li>
                    <li class="wow fadeInUp" data-wow-duration="800ms" data-wow-delay="200ms"><i class="fa fa-angle-right"></i> Mobile Development</li>
                    <li class="wow fadeInUp" data-wow-duration="700ms" data-wow-delay="300ms"><i class="fa fa-angle-right"></i> Desktop Development</li>
                    <li class="wow fadeInUp" data-wow-duration="600ms" data-wow-delay="400ms"><i class="fa fa-angle-right"></i> DB SQL Development and Administration</li>
                    <li class="wow fadeInUp" data-wow-duration="500ms" data-wow-delay="500ms"><i class="fa fa-angle-right"></i> UI Design</li>
                    <li class="wow fadeInUp" data-wow-duration="500ms" data-wow-delay="500ms"><i class="fa fa-angle-right"></i> Outstaff</li>
                </ul>
                <br/>
                <h3>We guarantee:</h3>
                <ul class="elements">
                    <li class="wow fadeInUp" data-wow-duration="900ms" data-wow-delay="100ms"><i class="fa fa-angle-right"></i> security of your app</li>
                    <li class="wow fadeInUp" data-wow-duration="800ms" data-wow-delay="200ms"><i class="fa fa-angle-right"></i> support</li>
                    <li class="wow fadeInUp" data-wow-duration="700ms" data-wow-delay="300ms"><i class="fa fa-angle-right"></i> bug free apps</li>
                    <li class="wow fadeInUp" data-wow-duration="600ms" data-wow-delay="400ms"><i class="fa fa-angle-right"></i> quality</li>
                    <li class="wow fadeInUp" data-wow-duration="500ms" data-wow-delay="500ms"><i class="fa fa-angle-right"></i> deadlines</li>
                    <li class="wow fadeInUp" data-wow-duration="500ms" data-wow-delay="500ms"><i class="fa fa-angle-right"></i> You will always get the best treatment of your project</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!--/#company-information-->
@if (Model != null && Model.Any())
{
    <section id="services">
        <div class="container">
            <div class="row">
                @foreach (var service in Model)
                {
                    var delay = string.Format("{0}ms", 300 * (Model.IndexOf(service) + 1));
                    <div class="col-md-4 col-sm-6 col-xs-12 text-center padding wow fadeIn service-item" data-wow-duration="1000ms" data-wow-delay="@delay">
                        <div class="single-service">
                            @if (!string.IsNullOrEmpty(service.ImageUrl))
                            {
                                <div class="wow scaleIn" data-wow-duration="500ms" data-wow-delay="300ms">
                                    <a href="@Url.Action("Service", "Home", new { id = service.Id })"><img src="@service.ImageUrl" alt="@service.Title"></a>
                                </div>
                            }
                            <h2><a href="@Url.Action("Service", "Home", new { id = service.Id })">@service.Title</a></h2>
                            <p>@service.ShortDescription</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
<!--/#services-->
